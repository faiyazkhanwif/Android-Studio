<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeActivity">

    <TextView
        android:id="@+id/TVRLtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDBFD7"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/using_relative_layout"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/TVRLtxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVRLtitle"
        android:fontFamily="serif-monospace"
        android:text="@string/text_1"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/TVRLtxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVRLtitle"
        android:layout_toRightOf="@+id/TVRLtxt1"
        android:fontFamily="serif-monospace"
        android:padding="15dp"
        android:text="@string/text_2"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TVRLtxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVRLtxt1"
        android:layout_alignParentRight="true"
        android:fontFamily="serif-monospace"
        android:padding="15dp"
        android:text="@string/text_3"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/TVRLtxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVRLtxt1"
        android:layout_toLeftOf="@+id/TVRLtxt3"
        android:fontFamily="serif-monospace"
        android:padding="15dp"
        android:text="@string/text_4"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TVRLtxt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVRLtxt1"
        android:layout_marginTop="235dp"
        android:layout_alignParentLeft="true"
        android:fontFamily="serif-monospace"
        android:padding="15dp"
        android:text="@string/text_5"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ETname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVRLtxt3"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="181dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@+id/TVRLtxt5"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnhome"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETname"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/TVRLtxt5"
        android:fontFamily="monospace"
        android:onClick="RLBackClicked"
        android:text="@string/back_to_home"
        app:backgroundTint="#3F51B5"
        app:cornerRadius="10dp" />
</RelativeLayout>